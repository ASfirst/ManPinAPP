<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <selector>
            <item android:state_pressed="true">
                <shape>
                    <solid android:color="@color/split_line" />
                    <stroke
                        android:width="1px"
                        android:color="@color/split_line" />
                    <size
                        android:width="60dp"
                        android:height="60dp" />
                </shape>
            </item>
            <item>
                <shape>
                    <solid android:color="@color/white" />
                    <stroke
                        android:width="1px"
                        android:color="@color/split_line" />
                    <size
                        android:width="60dp"
                        android:height="60dp" />
                </shape>
            </item>
        </selector>
    </item>
    <item>
        <bitmap
            android:gravity="center"
            android:src="@drawable/ic_keyboard_picture" />
    </item>
</layer-list>

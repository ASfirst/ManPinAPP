<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:paddingLeft="18dp"
    android:paddingRight="18dp"
    android:paddingTop="18dp"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/cardTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="异术超能"
            android:textColor="@color/black"
            android:textSize="24dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="65dp"
            android:layout_height="20dp"
            android:scaleType="fitXY"
            android:layout_gravity="right|center_vertical"
            android:src="@drawable/chang_icon" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/mz_book_head_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:id="@+id/mp_book_info_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="bottom"
            android:background="#e6f0fb"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="95dp"
            android:paddingRight="10dp">
            <TextView
                android:id="@+id/cardBookName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="都市绝品神医"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/cardBookbref"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingRight="10dp"
                android:ellipsize="end"
                android:lineSpacingExtra="2dp"
                android:maxLines="2"
                android:text="都市绝品神医都市绝品神医都市绝品神医都市绝品神医都市绝品神医都市绝品神医都市绝品神医都市绝品神医都市绝品神医都市绝品神医都市绝品神医都市绝品神医都市绝品神医都市绝品神医"
                android:textColor="#636161"
                android:textSize="12dp" />

        </LinearLayout>
        <ImageView
            android:id="@+id/cardTitleImage"
            android:layout_width="81dp"
            android:scaleType="fitXY"
            android:layout_height="110dp"
            android:background="@drawable/img_cover_default_circle_1" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/FirstLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/cardFristImage"
                android:layout_width="wrap_content"
                android:scaleType="fitXY"
                android:layout_height="110dp"
                android:background="@drawable/img_cover_default_circle_1" />

            <TextView
                android:id="@+id/cardFristText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="女神的第一高手"
                android:textSize="13dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/TowLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/cardTowImage"
                android:layout_width="wrap_content"
                android:scaleType="fitXY"
                android:layout_height="110dp"
                android:background="@drawable/img_cover_default_circle_1" />

            <TextView
                android:id="@+id/cardTowText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="女神的第一高手"
                android:textSize="13dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ThreeLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"

            android:orientation="vertical">

            <ImageView
                android:id="@+id/cardThreeImage"
                android:scaleType="fitXY"
                android:layout_width="wrap_content"
                android:layout_height="110dp"
                android:background="@drawable/img_cover_default_circle_1" />

            <TextView
                android:id="@+id/cardThreeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="女神的第一高手"
                android:textSize="13dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/FourLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"

            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/cardFourImage"
                android:scaleType="fitXY"
                android:layout_width="wrap_content"
                android:layout_height="110dp"
                android:background="@drawable/img_cover_default_circle_1" />

            <TextView
                android:id="@+id/cardFourText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="女神的第一高手"
                android:textSize="13dp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
